<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a new lesson</h1>
  <%= simple_form_for @lesson, :url => instructor_section_lessons_path(current_section) do |f| %> <!-- notice use of helper method in controller here -->
